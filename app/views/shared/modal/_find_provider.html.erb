<div class="find-provider-page">
	<a href="/" class="arrow-left back-to-provider-find"></a>
	<div class="find-provider-page-contents">
		<div class="row title">
			<div class="col-sm-12 title">
				Enter your work email
			</div>
			<div class="col-sm-12 instructions">
				We'll lookup your payroll provider using your work email.
			</div>			
		</div>
		<div class="row find-payroll-provider-credentials">
			<div class="col-sm-12">
				<form>
				  <%= csrf_meta_tag %>
				  <div class="form-group">
				  	<input type="email" class="form-control" id="work-email" placeholder="Work Email">
				  </div>
				  <button type="submit" class="lookup-provider-button">Submit</button>
				</form>
			</div>
		</div>
	</div>
</div>